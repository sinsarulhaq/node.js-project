<section>
    <div class="container">
        <div class="row">
            <div class="container mt-5 mb-3">
                <div class="row">
                    <a href="admin/add-product" class="btn btn-success">Add products</a>
                </div>
            </div>
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">title</th>
                            <th scope="col">category</th>
                            <th scope="col">description</th>
                            <th scope="col">image</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{this.Name}}</td>
                            <td>{{this.Category}}</td>
                            <td>{{this.Description}}</td>
                            <td> <img style="width: 50px;height:50px;" src="/product-image/{{this.insertedId}}.jpg"
                                    alt=""> </td>
                            <td>
                                <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>